{
  "mcpServers": {
    "troubleshoot": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "-v", 
        "${HOME}/k8s-bundles:/data/bundles",
        "-e",
        "SBCTL_TOKEN=${SBCTL_TOKEN}",
        "-e",
        "MCP_BUNDLE_STORAGE=/data/bundles",
        "-e", 
        "MCP_KEEP_ALIVE=true",
        "--rm",
        "mcp-server-troubleshoot:latest"
      ]
    }
  }
}